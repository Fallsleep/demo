@CHARSET "UTF-8";

/* global */
button {
	margin: 0 8px 0;
	padding: 8px 10px;
}
.expand {
	cursor: pointer;
}
.expand, .form-header {
	background-color: #ff6666;
	color: #fff;
	font-weight: bold;
	padding: 10px;
}
.expandable {
	display: none;
}
.expandable, .form-content {
	background-color: #ffffff;
	border: 1px solid #ff6666; 
	padding: 10px;
}

.login-form-header {
	background-color: #ff6666;	
	color: #fff;
	font-size: 120%;
	font-weight: bold;
	padding: 10px;
	width: 20%;
	text-align: center;
	margin-left: auto;
	margin-right: auto;
}
.login-form-content {
	background-color: #ffffff;
	border: 1px solid #ff6666; 
	font-size: 80%;
	padding: 8px;
	width: 20%;
	text-align: center;
	margin-left: auto;
	margin-right: auto;
}


/* default.ctp */
#header ul {
	margin: 0;
}
#header li {
	display: inline;
	margin: 0;
}
#header li a {
	background-color: #ff6666;
	color: #fff;
	margin: 0;
	padding: 10px;
	text-decoration: none;
}
#header li a:hover, #header li.current a {
	background-color: #fff;
	color: #ff6666;
}

/* Jobs, Workers ctp */
.content {
	background: #ffffff;
	display: none;
	margin-top: 40px;
}
.tab {
	color: #ff6666;
	cursor: pointer;
	font-weight: bold;
	padding: 5px;
	position: absolute;
	text-align: center;
	top: 45px;
	width: 75px;
}
.tab:hover {
	border-bottom-style: solid;
}
.tab.current {
	border-bottom-style: solid;
}

#worker-info-content,  #job-info-content {
	// display: block;
}

#worker-info-content table, #job-info-content table {
	border-collapse: collapse;
}
#worker-info-content th, #worker-info-content td, #job-info-content th, #job-info-content td {
	border: 1px solid;
}

/* workers/view.ctp */
#worker-info-content #worker-photo {
	-moz-border-radius: 10px;
	-webkit-border-radius: 10px;
	border-radius: 10px;
	height: 200px;
	width: 200px;
	overflow: hidden;
}
#worker-info-content #work-info {
	margin-top: 10px;
}
#worker-info-content #worker-basic-info {
	left: 250px;
	position: absolute;
	top: 85px;
	width: 400px;
}
#worker-info-content #worker-other-info {
	left: 250px;
	position: absolute;
	top: 295px;	
	width: 400px;
}
#worker-info-content #system-info {
	border-top: 1px solid #aaa;
	color: #999;
	font-size: 10px;
	padding-top: 10px;
}
#worker-photo img {
	-moz-border-radius: 10px;
	-webkit-border-radius: 10px;
	border-radius: 10px;
	height: auto;
	max-width: 100%;	
}
#worker-basic-info #chi-name {
	font-size: 24px;
	font-weight: bold;	
}
#worker-basic-info #worker-no {
	color: #666;
	font-size: 10px;
}
.worker-contact, .worker-mobile, .worker-other-contact, .worker-address, #worker-other-info .lang {
	display: inline-block;
}
#worker-basic-info .worker-contact-thumb {
	background-image: url('/careformumi_crm/img/google-icons.png');
	background-repeat: no-repeat;
	background-size: 300px 300px;
	height: 25px;
	width: 25px;	
}
#worker-basic-info #mobile-thumb {
	background-position: -4px -162px;
}
#worker-basic-info #other-contact-thumb {
	background-position: -164px -107px;
}
#worker-basic-info #address-thumb {
	background-position: -83px -161px;
}
#worker-basic-info #worker-address {
	margin-bottom: -20px;
}
#worker-other-info .section-header {
	font-size: 16px;
	text-decoration: underline;
}
#worker-other-info .flag-thumb {
	background-image: url('/careformumi_crm/img/national-flags.png');
	background-repeat: no-repeat;
	background-size: 450px 450px;
	height: 20px;
	margin-left: 10px;
	width: 25px;	
}
#worker-other-info #zh-thumb {
	background-position: -239px -151px;
}
#worker-other-info #cn-thumb {
	background-position: -345px -61px;
}
#worker-other-info #en-thumb {
	background-position: -213px -121px;
}
#worker-other-info #jp-thumb {
	background-position: -292px -181px;
}